@page "/dashboard"

@inject NavigationManager NavigationManager

<style>
    /* Set body and html margins and overflow to prevent scroll */
    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden; /* Prevent horizontal scroll */
    }

    /* Partial-page background */
    .background {
        position: fixed;
        top: 0;
        left: 250px; /* Adjust this value to start the background image to the right of the sidebar */
        width: calc(100vw - 250px); /* Use viewport width units to prevent overflow */
        height: 100%;
        background-image: url('/blur-background.ico');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        z-index: -1; /* Place background behind the content */
    }

    /* Content area styling */
    .content {
        position: relative;
        z-index: 2; /* Ensure content is on top of the background */
        overflow-x: hidden; /* Prevent content overflow */
        margin-top: 65px; /* Add margin to lower the buttons */
    }

    /* Top banner styling */
    .top-banner {
        position: fixed; /* Fixed positioning to align with the viewport */
        top: 0;
        left: 250px; /* Start from the sidebar edge */
        width: calc(100vw - 250px); /* Extend across the entire content area */
        height: 180px; /* Set a height for the banner */
        background-image: url('/praise.ico'); /* Use praise.ico as background */
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        z-index: 1; /* Ensure banner is on top of background but below content */
    }
</style>

<!-- Background Image Div -->
<div class="background"></div>

<!-- Top banner image -->
<div class="top-banner"></div>

<div class="content px-4 d-flex flex-column justify-content-center align-items-center" style="height: 100vh; margin-bottom: 25px;">
    <div class="w-100" style="max-width: 600px;">
        <div class="d-flex flex-column align-items-center">
            <div>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("AboutUs")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/AboutUs_icon.ico" alt="About Us Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> About Us
                </button>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("bulletinboard")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/bulletin_icon.ico" alt="Bulletin Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> Bulletin Board
                </button>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("news")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/news_icon.ico" alt="News Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> News
                </button>
            </div>

            <div>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("calendar")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/calendar_icon.ico" alt="Calendar Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> Calendar
                </button>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("chats")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/chatting_icon.ico" alt="Chats Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> Chats
                </button>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("chatting")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/chat_icon.ico" alt="Chatting Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> Chatting
                </button>
            </div>

            <div>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("donate")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/donate_icon.ico" alt="Donate Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> Donate
                </button>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("localymca")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/location_icon.ico" alt="Find Local YMCA Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> Local YMCA
                </button>
                <button class="btn btn-primary mb-3" @onclick='() => NavigateTo("volunteer")' style="width: 130px; background-color: #CF1A21; text-align: center; margin-left: 10px; margin-right: 10px; border-radius: 12px;">
                    <img src="/volunteer_icon.ico" alt="Volunteer Icon" style="display: block; margin: 8px auto 0 auto; width: 50px; height: 50px;" /> <br /> Volunteer
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateTo(string page)
    {
        NavigationManager.NavigateTo($"/{page}");
    }
}
